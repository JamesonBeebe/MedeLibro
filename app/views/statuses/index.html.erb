<div class="container">
<div class="col-md-5">
  <div class="page-header">
  <h1>Updates</h1>
  </div>

  <% @statuses.each do |status| %>
  <div class="status">
      <div class="row">
        <div class="col-md-3">
          <%= link_to image_tag(status.user.gravatar_url), profile_path(status.user.to_param) %>
        </div>
        <div class="col-md-6">
        <strong><%= link_to status.user.full_name, profile_path(status.user.profile_name) %></strong>
        <p><%= status.content %></p>
          <div class="meta">
            <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
            <% if status.user == current_user %>
              <span class="admin">
                | <%= link_to "Edit", edit_status_path(status) %> |
                <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sture you want to delete this stauts?"} %>
              </span>
            <%end %>
          </div>
        </div>
      </div>
  </div>
  <% end %>
</div>
</div>